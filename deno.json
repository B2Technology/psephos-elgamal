{
  "name": "@psephos/elgamal",
  "description": "Package for zero-knowledge proof voting",
  "version": "1.0.1",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts"
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "test:npm": "deno run -A scripts/build_npm.ts --test",
    "build:npm": "deno run -A scripts/build_npm.ts",
    "publish:npm": "npm publish dist/ --access public",
    "publish:deno": "deno publish",
    "test:cov": "deno test --coverage=./.coverage/data && deno coverage --html ./.coverage ./.coverage/data"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "exclude": [
    "dist/",
    ".tmp/",
    ".coverage/"
  ],
  "publish": {
    "include": [
      "src",
      "LICENSE",
      "README.md"
    ],
    "exclude": [
      "tests",
      "scripts",
      ".tmp",
      "node_modules"
    ]
  }
}
